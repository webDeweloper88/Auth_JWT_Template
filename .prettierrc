{
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "importOrderSeparation": true,
    "importOrderSpecifiers": true,
    "importOrderParserPlugins": [
        "classProperties",
        "typescript",
        "decorators-legacy"
    ],
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^@/(.*)$",
        "^../(.*)$",
        "^./(.*)$"
    ],
    "plugins": [
        "@trivago/prettier-plugin-sort-imports",
        "prettier-plugin-prisma"
    ]
}
